@model FirstMVC.Models.Customer
@using FirstMVC

@{
    ViewData["Title"] = "TagHelpers";
}

<h2>TagHelpers</h2>

<form method="post">
    <button asp-controller="Home" asp-action="Index">Click Me</button>
    <h3>OR</h3>
    <input type="image" src="~/images/save-green-button-small.jpg" alt="Or Click Me" asp-controller="Home"
           asp-action="Index">

    <br />
    <label asp-for="Firstname">Firstname</label>
    <input asp-for="Firstname" />

    <br />
    <label asp-for="Password">Password</label>
    <input asp-for="Password" />

    <h2>Custom HTML Helper</h2>
    <div>
        <div>@Html.HelloWorldHTMLString()</div>
        <div>@Html.HelloWorldString()</div>
    </div>
</form>

